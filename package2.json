    "bootstrap-ext": "^0.2.0",
    "chai": "^2.3.0",
    "classnames": "^2.1.1",
    "compression": "^1.4.4",
    "config": "^1.13.0",
    "cookie-parser": "^1.3.4",
    "css-loader": "^0.15.1",
    "deep-merge": "^1.0.0",
    "emailjs": "^0.3.16",
    "event-stream": "^3.3.1",
    "express": "^4.12.3",
    "extract-text-webpack-plugin": "^0.8.2",
    "faker": "^2.1.3",
    "file-loader": "^0.8.4",
    "flat": "^1.5.1",
    "font-awesome": "^4.3.0",
    "glob": "^5.0.9",
    "helmet": "^0.9.0",
    "html-loader": "^0.3.0",
    "joi": "^6.4.1",
    "json-loader": "^0.5.2",
